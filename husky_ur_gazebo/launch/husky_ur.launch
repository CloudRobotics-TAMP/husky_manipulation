<launch>
  <arg name="laser_enabled" default="false"/>
  <arg name="kinect_enabled" default="false"/>
  <arg name="husky_world" default="$(find husky_gazebo)/launch/husky_playpen.launch"/>

  <rosparam file="$(find husky_ur_gazebo)/config/ur_arm_controller.yaml" command="load"/>

  <remap from="/ur_arm_controller/follow_joint_trajectory" to="/follow_joint_trajectory"/>

  <!-- Spawn controllers -->
  <node name="arm_controller_spawner" pkg="controller_manager" type="spawner"
      args="ur_arm_controller"/>

  <include file="$(arg husky_world)">
    <arg name="laser_enabled" value="$(arg laser_enabled)"/>
    <arg name="kinect_enabled" value="$(arg kinect_enabled)"/>
  </include>
</launch>
